<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBmiCalculator.MainPage"
             Title="BMI Calculator">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <Label 
                Text="BMI Calculator"
                FontSize="32"
                HorizontalOptions="Center"
                FontAttributes="Bold" />

            <Entry
                x:Name="HeightEntry"
                Placeholder="Enter Height (meters)"
                Keyboard="Numeric" />

            <Entry
                x:Name="WeightEntry"
                Placeholder="Enter Weight (kg)"
                Keyboard="Numeric" />

            <Button
                Text="Calculate BMI"
                Clicked="OnCalculateClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50" />

            <Label
                x:Name="ResultLabel"
                Text=""
                FontSize="20"
                HorizontalOptions="Center"
                FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
